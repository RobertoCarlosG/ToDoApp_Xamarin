<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.App.View.AddPage"
             Title="Agregar Tarea">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" x:Name="btn_guardar" Clicked="btn_guardar_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="Black"/>
            <Entry x:Name="nombre" Placeholder="Nombre de la Tarea"/>
            <Label Text="Descripción" FontSize="Medium"  TextColor="Black"/>
            <Entry x:Name="descripcion" Placeholder="Descripcion de la actividad" MaxLength="600"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>